{{#if addNewPost}}
  <h1>New Post</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="user">Username:</label>
          {{input value=user id="user"}}
        </div>

        <div class="form-group">
          <label for="catPic">Image Link:</label>
          {{input value=catPic id="catPic"}}
        </div>

        <div class="form-group">
          <label for="title">Post Title:</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="message">Post body:</label>
          {{input value=message id="message"}}
        </div>

        <div class="form-group">
          <label for="awards">Awards won:</label>
          {{input value=awards id="awards"}}
        </div>

        <div class="form-group">
          <label for="tldr">Short summary (tl:dr):</label>
          {{input value=tldr id="tldr"}}
        </div>

        <button {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'newPostFormShow'}}>New Post</button>
{{/if}}
