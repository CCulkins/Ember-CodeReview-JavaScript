<li class="tile">
  <p class="title">{{post.title}}</p>
  <p class="user">By: {{post.user}}</p>

  {{#if fullPostDisplaying }}
    <p class="image"><img src={{post.catPic}} alt={{post.title}} {{action 'fullPostNoDisplay'}}></p>
    <p class="message">{{post.message}}</p>
    <br>
    {{post-awards post}}{{add-comment add='add' save="save" post=post}}

    <!-- <button class="addLove" {{action 'postLove'}}>Heart</button> -->

  {{else}}
    <button class="fullPost" {{action 'fullPostDisplays'}}>Full Post</button>
  {{/if}}

  <p class="tldr">(tl:dr: {{post.tldr}})</p>
  {{edit-post post=post edit="edit"}}

  <button class="delete" {{action 'delete' post}}>Remove</button>

  <br>
  <br>
</li>
